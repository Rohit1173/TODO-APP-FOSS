<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit">

    <RelativeLayout
        android:layout_width="@dimen/relative_layout_width"
        android:layout_height="@dimen/relative_layout_height"
        android:background="@drawable/dialogback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <EditText
            android:id="@+id/rename"
            android:layout_width="match_parent"
            tools:text="ROHIT"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_layout_margin_top"

            />

        <Button
            android:id="@+id/renamesave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rename"
             android:text="SAVE"
            android:layout_marginLeft="@dimen/button_layout_margin_left"
            android:layout_marginTop="@dimen/button_layout_margin_top" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>